{% extends 'layouts/base.njk' %}

{% block content %}
  <article class="o-flow c-post">
    <header class="o-flow">
      <h1>
        {{ title }}
        {% if icon %}
          <span aria-hidden="true">{{ icon }}</span>
        {% endif %}
      </h1>
      <div class="c-post__meta">
        <time datetime="{{ page.date | datetime }}">
          {{ page.date | datetime(site.dateFormat) }}
        </time>
        by
        {% if not author %}
          {% set author = site.defaultAuthor %}
        {% endif %}
        {% if author.link %}
          <a href="{{ author.link }}">{{ author.name }}</a>
        {% else %}
          {{ author.name }}
        {% endif %}
      </div>
    </header>
    <div class="o-flow s-post-body">
      {{ content | safe }}
    </div>
    <footer class="c-post__footer c-post__meta">
      Filed under:
      {% include 'partials/tag-list.njk' %}
    </footer>
  </article>
{% endblock %}