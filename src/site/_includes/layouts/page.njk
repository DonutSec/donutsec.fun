{% extends 'layouts/base.njk' %}

{% block content %}
  <article class="o-flow c-post">
    <header>
      <h1>
        {{ title }}
        {% if icon %}
          <span aria-hidden="true">{{ icon }}</span>
        {% endif %}
      </h1>
    </header>
    <div class="o-flow s-post-body">
      {{ content | safe }}
    </div>
  </article>
{% endblock %}